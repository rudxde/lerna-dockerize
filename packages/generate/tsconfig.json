{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2020",
        "module": "CommonJS",
        "lib": [
            "es2020"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "allowJs": true,
        "checkJs": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*"
    ]
}
