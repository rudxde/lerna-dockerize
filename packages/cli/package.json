{
  "name": "@lerna-dockerize/cli",
  "version": "0.9.0",
  "description": "A dockerfile generator for lerna projects",
  "keywords": [
    "lerna",
    "docker",
    "monorepo"
  ],
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "build": "tsc -p .",
    "build:prod": "npm run build",
    "publish:npm": "npm publish",
    "pretest": "npm run build",
    "test": "ts-node -P ./tsconfig.test.json node_modules/jasmine/bin/jasmine --config=jasmine.json",
    "test:coverage": "ts-node -P ./tsconfig.test.json node_modules/nyc/bin/nyc.js npm run test",
    "lint": "eslint -c .eslintrc.js --ext .ts ."
  },
  "author": "rudxde",
  "homepage": "https://github.com/rudxde/lerna-dockerize",
  "repository": "https://github.com/rudxde/lerna-dockerize",
  "bugs": "https://github.com/rudxde/lerna-dockerize",
  "dependencies": {
    "@lerna-dockerize/logger": "0.9.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/jasmine": "^4.0.0",
    "@types/node": "^17.0.5",
    "@types/npm-package-arg": "^6.1.0",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.8.1",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "jasmine": "^4.0.2",
    "nyc": "^15.1.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "package*.json",
    "README.md",
    "dist/**"
  ],
  "license": "Apache-2.0"
}
