{
  "name": "lerna-dockerize",
  "version": "0.2.0",
  "description": "A dockerfile generator for lerna projects",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "build": "tsc -p .",
    "build:prod": "npm run build",
    "publish:npm": "npm publish",
    "test": "ts-node -P ./tsconfig.test.json node_modules/jasmine/bin/jasmine --config=jasmine.json",
    "test:coverage": "ts-node -P ./tsconfig.test.json node_modules/nyc/bin/nyc.js npm run test",
    "lint": "eslint -c .eslintrc.js --ext .ts ."
  },
  "author": "rudxde",
  "homepage": "https://github.com/rudxde/lerna-dockerize",
  "repository": "https://github.com/rudxde/lerna-dockerize",
  "bugs": "https://github.com/rudxde/lerna-dockerize",
  "bin": {
    "lerna-dockerize": "./bin"
  },
  "dependencies": {
    "@lerna/command": "^4.0.0",
    "@lerna/filter-options": "^4.0.0",
    "@lerna/project": "^4.0.0",
    "@lerna/run-topologically": "^4.0.0",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@types/jasmine": "^3.6.9",
    "@types/node": "^14.14.41",
    "@types/npm-package-arg": "^6.1.0",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "jasmine": "^3.7.0",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "package*.json",
    "README.md",
    "dist/**"
  ],
  "license": "Apache-2.0"
}
